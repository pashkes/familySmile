mixin awards-slide(data)
  .awards-item__photo
    a(href="__static__img/content/" + data.img + '-large.jpg' data-fancybox="gallery")
      img(src="__static__img/content/" + data.img + '.jpg'  alt=data.title)

mixin awards-item(data)
  figure.awards-item
    +awards-slide(data)
    figcaption.awards-item__caption !{data.title}
